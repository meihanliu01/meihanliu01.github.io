---
import { siteConfig } from "../config";
---

<div
  id="hero"
  class="relative isolate overflow-hidden bg-white py-24 md:h-screen"
  style={`--accent-color: ${siteConfig.accentColor}`}
>
  <!-- Gradient overlay -->
  <div
    class="absolute inset-0 -z-10"
    style={`background: radial-gradient(ellipse 800px 1200px at 0% 0%, ${siteConfig.accentColor}40 0%, ${siteConfig.accentColor}25 20%, ${siteConfig.accentColor}10 40%, rgba(255, 255, 255, 0.3) 70%, rgba(255, 255, 255, 0.8) 90%, white 100%)`}
  >
  </div>

  <!-- Background pattern -->
  <svg
    aria-hidden="true"
    class="absolute inset-0 -z-10 size-full stroke-gray-200 [mask-image:radial-gradient(100%_100%_at_top_right,white,transparent)]"
  >
    <defs>
      <pattern
        x="50%"
        y={-1}
        id="grid"
        width={200}
        height={200}
        patternUnits="userSpaceOnUse"
      >
        <path d="M.5 200V.5H200" fill="none"></path>
      </pattern>

      <pattern
        id="programming-symbols"
        x="0"
        y="0"
        width="400"
        height="400"
        patternUnits="userSpaceOnUse"
      >
        <text x="50" y="50" fill={siteConfig.accentColor} font-family="monospace" font-size="24" transform="rotate(-15)">&lt;/&gt;</text>
        <text x="150" y="100" fill={siteConfig.accentColor} font-family="monospace" font-size="20" transform="rotate(10)">{}</text>
        <text x="250" y="80" fill={siteConfig.accentColor} font-family="monospace" font-size="18" transform="rotate(-5)">=&gt;</text>
        <text x="100" y="200" fill={siteConfig.accentColor} font-family="monospace" font-size="22" transform="rotate(15)">[]</text>
        <text x="300" y="180" fill={siteConfig.accentColor} font-family="monospace" font-size="20" transform="rotate(-10)">&lt;&gt;</text>
        <text x="200" y="250" fill={siteConfig.accentColor} font-family="monospace" font-size="24" transform="rotate(5)">()</text>
        <text x="50" y="320" fill={siteConfig.accentColor} font-family="monospace" font-size="18" transform="rotate(-8)">::</text>
        <text x="350" y="300" fill={siteConfig.accentColor} font-family="monospace" font-size="22" transform="rotate(12)">==</text>
        <text x="150" y="350" fill={siteConfig.accentColor} font-family="monospace" font-size="20" transform="rotate(-15)">++</text>
        <text x="250" y="370" fill={siteConfig.accentColor} font-family="monospace" font-size="24" transform="rotate(8)">;</text>
      </pattern>
    </defs>

    <rect fill="url(#programming-symbols)" width="100%" height="100%" opacity="0.2"></rect>
    <rect fill="url(#grid)" width="100%" height="100%" stroke-width={0}></rect>
  </svg>

  <!-- Center content -->
  <div class="h-full mx-auto p-8 sm:p-12 md:p-24 flex items-center">
    <div class="w-full grid grid-cols-1 lg:grid-cols-[1fr_auto] items-center gap-10 lg:gap-16">
      <!-- Left: text -->
      <div>
        <h2 class="text-pretty text-xl sm:text-2xl md:text-5xl font-bold tracking-tight text-gray-700 animate-fade-in">
          Hello! Bonjour! ðŸ‘‹
        </h2>

        <h1 class="mt-6 sm:mt-8 md:mt-10 text-pretty text-4xl sm:text-5xl md:text-6xl lg:text-8xl font-bold tracking-tight text-gray-800 animate-fade-in animation-delay-200">
          I'm <span style={{ color: siteConfig.accentColor }}>{siteConfig.name}</span>
        </h1>

        <p class="mt-4 sm:mt-6 md:mt-8 text-pretty text-base sm:text-lg md:text-xl/8 font-medium text-gray-600 animate-fade-in animation-delay-400">
          {siteConfig.title}
        </p>
      </div>

      <!-- Right: avatar -->
      {
        (siteConfig as any).avatar?.src && (
          <div class="flex justify-start lg:justify-end animate-fade-in animation-delay-400">
            <div
              class="rounded-full p-1"
              style={`background: radial-gradient(circle at 30% 30%, ${siteConfig.accentColor}55, rgba(255,255,255,0) 70%)`}
            >
              <img
                src={(siteConfig as any).avatar.src}
                alt={(siteConfig as any).avatar.alt ?? siteConfig.name}
                loading="eager"
                class="w-40 h-40 sm:w-48 sm:h-48 md:w-56 md:h-56 lg:w-72 lg:h-72 rounded-full object-cover ring-4 ring-white/60 shadow-xl"
              />
            </div>
          </div>
        )
      }
    </div>
  </div>

    <!-- Social icons (icon style like your 2nd image) -->
  <div class="absolute bottom-0 left-0 right-0 p-8 sm:p-12 md:p-24 flex gap-x-4 text-gray-700 animate-fade-in animation-delay-600">
    {
      siteConfig.social?.email && (
        <a
          href={`mailto:${siteConfig.social.email}`}
          aria-label="Email"
          class="group inline-flex items-center justify-center rounded-xl p-2 transition hover:scale-110"
        >
          <svg
            viewBox="0 0 24 24"
            class="h-7 w-7 fill-gray-700 transition group-hover:fill-[var(--accent-color)]"
            aria-hidden="true"
          >
            <path d="M2 6.5A2.5 2.5 0 0 1 4.5 4h15A2.5 2.5 0 0 1 22 6.5v11A2.5 2.5 0 0 1 19.5 20h-15A2.5 2.5 0 0 1 2 17.5v-11Z" />
            <path d="M4 7l8 5 8-5v2l-8 5-8-5V7Z" fill="white" opacity="0.95" />
          </svg>
        </a>
      )
    }

    {
      siteConfig.social?.linkedin && (
        <a
          href={siteConfig.social.linkedin}
          target="_blank"
          rel="noopener noreferrer"
          aria-label="LinkedIn"
          class="group inline-flex items-center justify-center rounded-xl p-2 transition hover:scale-110"
        >
          <svg
            viewBox="0 0 24 24"
            class="h-7 w-7 fill-gray-700 transition group-hover:fill-[var(--accent-color)]"
            aria-hidden="true"
          >
            <path d="M20.447 20.452H17.21v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.0V9h3.11v1.561h.044c.434-.823 1.494-1.692 3.074-1.692 3.29 0 3.894 2.165 3.894 4.98v6.603zM5.337 7.433a1.845 1.845 0 1 1 0-3.69 1.845 1.845 0 0 1 0 3.69zM6.956 20.452H3.717V9h3.239v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.727v20.545C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.273V1.727C24 .774 23.2 0 22.222 0z"/>
          </svg>
        </a>
      )
    }

    {
      siteConfig.social?.github && (
        <a
          href={siteConfig.social.github}
          target="_blank"
          rel="noopener noreferrer"
          aria-label="GitHub"
          class="group inline-flex items-center justify-center rounded-xl p-2 transition hover:scale-110"
        >
          <svg
            viewBox="0 0 24 24"
            class="h-7 w-7 fill-gray-700 transition group-hover:fill-[var(--accent-color)]"
            aria-hidden="true"
          >
            <path d="M12 .5C5.73.5.5 5.74.5 12.02c0 5.1 3.29 9.42 7.86 10.95.58.1.79-.25.79-.56v-2.02c-3.2.7-3.87-1.37-3.87-1.37-.52-1.32-1.27-1.67-1.27-1.67-1.04-.72.08-.71.08-.71 1.15.08 1.76 1.18 1.76 1.18 1.02 1.75 2.67 1.25 3.32.96.1-.74.4-1.25.72-1.54-2.56-.29-5.25-1.28-5.25-5.7 0-1.26.45-2.29 1.18-3.1-.12-.29-.51-1.46.11-3.04 0 0 .97-.31 3.18 1.18.92-.26 1.9-.39 2.88-.39.98 0 1.96.13 2.88.39 2.2-1.49 3.18-1.18 3.18-1.18.62 1.58.23 2.75.11 3.04.73.81 1.18 1.84 1.18 3.1 0 4.43-2.7 5.41-5.28 5.69.41.36.78 1.07.78 2.16v3.2c0 .31.21.67.8.56A11.53 11.53 0 0 0 23.5 12.02C23.5 5.74 18.27.5 12 .5Z"/>
          </svg>
        </a>
      )
    }
  </div>


<style>
@keyframes fadeIn {
  from { opacity: 0; transform: translateY(20px); }
  to { opacity: 1; transform: translateY(0); }
}

.animate-fade-in { animation: fadeIn 0.8s ease-out forwards; opacity: 0; }
.animation-delay-200 { animation-delay: 0.2s; }
.animation-delay-400 { animation-delay: 0.4s; }
.animation-delay-600 { animation-delay: 0.6s; }
</style>
